Decl =
  function:DeclFn
| constant:DeclConst

DeclFn =
  kw_fn:'fn' 'ident' '(' ')' body:StmtBlock

DeclConst =
  kw_const:'const' 'ident' '=' expr:Expr

Stmt =
  expr:StmtExpr
| block:StmtBlock

StmtExpr =
  expr:Expr

StmtBlock =
  '{' stmts:Stmt '}'

Expr =
  binary:ExprBinary
| literal:ExprLiteral
| paren:ExprParen

ExprBinary =
  lhs:Expr
  plus:'+'
  star:'*'
  rhs:Expr

ExprLiteral =
  string:'string'
  number:'number'

ExprParen = '(' expr:Expr ')'
